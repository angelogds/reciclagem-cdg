<h1 class="page-title">Ordens de Serviço</h1>

<div class="top-actions">
    <a href="/ordens/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Nova OS
    </a>
</div>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Equipamento</th>
                <th>Tipo</th>
                <th>Status</th>
                <th>Abertura</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>

            <% if (ordens.length === 0) { %>
                <tr>
                    <td colspan="6" class="empty">Nenhuma ordem encontrada.</td>
                </tr>
            <% } %>

            <% ordens.forEach(o => { %>
                <tr>
                    <td><%= o.id %></td>

                    <td><%= o.equipamento_nome || "-" %></td>

                    <td><%= o.tipo %></td>

                    <td>
                        <% if (o.status === "aberta") { %>
                            <span class="tag aberta">Aberta</span>
                        <% } else { %>
                            <span class="tag fechada">Fechada</span>
                        <% } %>
                    </td>

                    <td><%= o.aberta_em %></td>

                    <td class="actions">

                        <!-- Ver OS -->
                        <a href="/ordens/<%= o.id %>" class="btn-view">
                            <i class="fa-solid fa-eye"></i>
                        </a>

                        <!-- PDF -->
                        <a href="/solicitacao/pdf/<%= o.id %>" class="btn-pdf">
                            <i class="fa-solid fa-file-pdf"></i>
                        </a>

                        <% if (session.role === "admin") { %>
                        <!-- Excluir -->
                        <form method="POST" action="/ordens/<%= o.id %>/delete"
                              onsubmit="return confirm('Excluir OS?');">
                            <button class="btn-delete">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                        <% } %>

                    </td>

                </tr>
            <% }) %>

        </tbody>

    </table>
</div>

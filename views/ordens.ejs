<h1 class="page-title">
    <i class="fa-solid fa-list-check"></i>
    Ordens de Serviço
</h1>

<div class="top-actions">
    <a href="/ordens/novo" class="btn btn-verde-claro">
        <i class="fa-solid fa-plus"></i> Nova OS
    </a>
</div>

<div class="card tabela-card">

    <table class="tabela">
        <thead>
            <tr>
                <th>ID</th>
                <th>Equipamento</th>
                <th>Solicitante</th>
                <th>Tipo</th>
                <th>Status</th>
                <th>Abertura</th>
                <th style="width:180px; text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>

            <% if (ordens.length === 0) { %>
                <tr>
                    <td colspan="7" class="empty">Nenhuma OS aberta ou fechada.</td>
                </tr>
            <% } %>

            <% ordens.forEach(os => { %>
                <tr>
                    <td><%= os.id %></td>
                    <td><%= os.equipamento_nome || "-" %></td>
                    <td><%= os.solicitante %></td>
                    <td><%= os.tipo %></td>

                    <td>
                        <% if (os.status === 'aberta') { %>
                            <span class="tag green">Aberta</span>
                        <% } else { %>
                            <span class="tag cinza">Fechada</span>
                        <% } %>
                    </td>

                    <td><%= os.aberta_em %></td>

                    <td class="actions">

                        <!-- VER OS -->
                        <a href="/ordens/<%= os.id %>" 
                           class="action-btn btn-qr">
                            <i class="fa-solid fa-eye"></i>
                            <span class="btn-label">Ver</span>
                        </a>

                        <% if (os.status === 'aberta') { %>
                        <!-- FECHAR OS -->
                        <a href="/ordens/<%= os.id %>"
                           class="action-btn btn-verde-escuro">
                            <i class="fa-solid fa-lock"></i>
                            <span class="btn-label">Fechar</span>
                        </a>
                        <% } %>

                        <!-- PDF -->
                        <a href="/solicitacao/pdf/<%= os.id %>" 
                           class="action-btn btn-pdf">
                            <i class="fa-solid fa-file-pdf"></i>
                            <span class="btn-label">PDF</span>
                        </a>

                    </td>
                </tr>
            <% }) %>

        </tbody>

    </table>

</div>

<%- include("./partials/rodape") %>

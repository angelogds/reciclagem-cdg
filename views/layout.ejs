<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= typeof title !== "undefined" ? title : "Sistema Manutenção" %></title>

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" 
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
</head>

<body>

  <!-- OVERLAY PARA MOBILE -->
  <div class="menu-overlay" id="menuOverlay" onclick="toggleMenu()"></div>

  <!-- SIDEBAR -->
  <aside class="sidebar" id="sidebar">
    <div class="brand">
      <a href="/" class="brand-link">
        <span class="brand-text">Campo do Gado</span>
      </a>
    </div>

    <nav class="nav">
      <a href="/" class="nav-item <%= active === 'dashboard' ? 'active' : '' %>">
        <i class="fa-solid fa-chart-line"></i><span>Dashboard</span>
      </a>

      <% if (session.role === 'admin' || session.role === 'funcionario') { %>
      <a href="/equipamentos" class="nav-item <%= active === 'equipamentos' ? 'active' : '' %>">
        <i class="fa-solid fa-truck"></i><span>Equipamentos</span>
      </a>

      <a href="/correias" class="nav-item <%= active === 'correias' ? 'active' : '' %>">
        <i class="fa-solid fa-gears"></i><span>Correias / Estoque</span>
      </a>
      <% } %>

      <a href="/ordens" class="nav-item <%= active === 'ordens' ? 'active' : '' %>">
        <i class="fa-solid fa-list-check"></i><span>Ordens de Serviço</span>
      </a>

      <% if (session.role === 'admin') { %>
      <a href="/users" class="nav-item <%= active === 'users' ? 'active' : '' %>">
        <i class="fa-solid fa-users"></i><span>Usuários</span>
      </a>
      <% } %>

      <a href="/logout" class="nav-item logout">
        <i class="fa-solid fa-right-from-bracket"></i><span>Sair</span>
      </a>
    </nav>

    <div class="sidebar-footer">
      <small>v1.0 • Manutenção</small>
    </div>
  </aside>

  <!-- MAIN -->
  <div class="main-container">

    <header class="topbar">
      <button class="btn-toggle" onclick="toggleMenu()">☰</button>

      <div class="topbar-right">
        <i class="fa-solid fa-user"></i>
        <span><%= session.usuario %></span>
      </div>
    </header>

    <main class="content">

      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>

      <% if (info) { %>
        <div class="alert alert-info"><%= info %></div>
      <% } %>

      <%- body %>
    </main>

  </div>

  <!-- SCRIPT DO MENU -->
  <script>
    function toggleMenu() {
      const s = document.getElementById('sidebar');
      const o = document.getElementById('menuOverlay');

      s.classList.toggle('open');
      o.classList.toggle('show');
    }
  </script>

</body>
</html>

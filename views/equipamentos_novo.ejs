<h1 class="page-title">
    <%= equipamento ? ("Editar — " + equipamento.nome) : "Novo Equipamento" %>
</h1>

<div class="card form-card">

    <form method="POST"
          action="<%= equipamento ? '/equipamentos/' + equipamento.id : '/equipamentos' %>"
          enctype="multipart/form-data">

        <label>Nome do Equipamento</label>
        <input type="text" name="nome" required
               value="<%= equipamento ? equipamento.nome : '' %>">

        <label>Código / Tag</label>
        <input type="text" name="codigo"
               value="<%= equipamento ? equipamento.codigo : '' %>">

        <label>Local</label>
        <input type="text" name="local"
               value="<%= equipamento ? equipamento.local : '' %>">

        <label>Descrição</label>
        <textarea name="descricao" rows="4"><%= equipamento ? equipamento.descricao : '' %></textarea>

        <label>Imagem do Equipamento</label>

        <% if (equipamento && equipamento.imagem) { %>
            <div class="img-preview">
                <img src="/<%= equipamento.imagem %>" alt="">
                <p class="img-info">Imagem atual — envie outra para substituir</p>
            </div>
        <% } %>

        <input type="file" name="imagem" accept="image/*">

        <button class="btn-primary" style="margin-top:20px;">
            <i class="fa-solid fa-save"></i>
            <%= equipamento ? "Salvar Alterações" : "Cadastrar Equipamento" %>
        </button>

    </form>

</div>

<div class="top-actions">
    <a href="/equipamentos" class="btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Voltar
    </a>
</div>

<% layout('layout', { title: equipamento ? "Editar Equipamento" : "Novo Equipamento", active: "equipamentos" }) %>

<h1 class="page-title"><%= equipamento ? "Editar Equipamento" : "Novo Equipamento" %></h1>

<form method="POST" enctype="multipart/form-data" 
      action="<%= equipamento ? '/equipamentos/' + equipamento.id : '/equipamentos' %>"
      class="form-card">

    <label>Nome</label>
    <input name="nome" required value="<%= equipamento?.nome || '' %>">

    <label>Código</label>
    <input name="codigo" value="<%= equipamento?.codigo || '' %>">

    <label>Local</label>
    <input name="local" value="<%= equipamento?.local || '' %>">

    <label>Descrição</label>
    <textarea name="descricao" rows="3"><%= equipamento?.descricao || '' %></textarea>

    <label>Imagem</label>

    <% if (equipamento && equipamento.imagem) { %>
        <img src="/<%= equipamento.imagem %>" class="thumb" style="margin-bottom:10px;">
    <% } %>

    <input type="file" name="imagem" accept="image/*">

    <button class="btn-save">
        <%= equipamento ? "Salvar Alterações" : "Cadastrar Equipamento" %>
    </button>
</form>

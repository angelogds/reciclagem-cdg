<% layout('layout', { title: "QR Code do Equipamento", active: "equipamentos" }) %>

<h1 class="page-title">QR Code — <%= equipamento.nome %></h1>

<div class="card" style="text-align:center; padding:30px;">

    <h2><%= equipamento.nome %></h2>
    <p>Código: <strong><%= equipamento.codigo || "-" %></strong></p>

    <img src="<%= qr %>" style="width:260px; margin:20px auto; display:block;">

    <p>Ao escanear este QR Code o funcionário será direcionado para:</p>
    <div class="descricao-box"><%= url %></div>

    <a href="/equipamentos/<%= equipamento.id %>/baixar" class="btn-save" style="margin-top:20px;">
        Acessar Menu de Baixa
    </a>

</div>

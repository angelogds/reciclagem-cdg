<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-qrcode"></i>
    QR Code do Equipamento
</h1>

<div class="card" style="text-align:center; padding:40px;">

    <h2 style="margin-bottom:20px; color:var(--green-900); font-weight:800;">
        <%= equipamento.nome %>
    </h2>

    <!-- QR code -->
    <div style="margin-bottom:25px;">
        <% if (qrCode) { %>
            <img src="<%= qrCode %>" 
                 alt="QR Code" 
                 style="width:240px; height:240px; border-radius:16px; box-shadow:0 4px 18px rgba(0,0,0,0.25);">
        <% } else { %>
            <p class="empty">QR Code não encontrado.</p>
        <% } %>
    </div>

    <button onclick="window.print()" class="btn btn-verde-escuro" style="margin-bottom:16px;">
        <i class="fa-solid fa-print"></i> Imprimir
    </button>

</div>

<a href="/equipamentos/<%= equipamento.id %>" class="btn btn-cinza-escuro">
    ← Voltar
</a>


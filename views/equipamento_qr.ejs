<h1 class="page-title">
    <i class="fa-solid fa-qrcode"></i> QR Code — <%= equipamento.nome %>
</h1>

<div class="card qr-card">

    <div class="equip-info">
        <p><strong>ID:</strong> <%= equipamento.id %></p>
        <p><strong>Código:</strong> <%= equipamento.codigo %></p>
        <p><strong>Local:</strong> <%= equipamento.local %></p>

        <% if (equipamento.imagem) { %>
            <img src="/<%= equipamento.imagem %>" class="equip-preview">
        <% } %>
    </div>

    <div class="qr-area">
        <h3>QR Code Gerado</h3>

        <!-- *** AQUI É O QR EM BASE64 *** -->
        <img src="<%= qr %>" class="qr-img">

        <a 
            href="<%= qr %>"
            download="QR_Equipamento_<%= equipamento.id %>.png"
            class="btn-primary" 
            style="margin-top:20px;">
            <i class="fa-solid fa-download"></i> Baixar QR Code
        </a>
    </div>

</div>

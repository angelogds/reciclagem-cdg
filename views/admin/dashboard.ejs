<div class="dashboard-grid">
    <div class="dash-card card">
        <div class="dash-icon bg-green">ğŸ“¦</div>
        <div class="dash-info">
            <h3>Equipamentos</h3>
            <p><%= totals.equipamentos %></p>
        </div>
    </div>

    <div class="dash-card card">
        <div class="dash-icon bg-blue">ğŸ› ï¸</div>
        <div class="dash-info">
            <h3>Ordens Abertas</h3>
            <p><%= totals.abertas %></p>
        </div>
    </div>

    <div class="dash-card card">
        <div class="dash-icon bg-orange">âœ”ï¸</div>
        <div class="dash-info">
            <h3>Ordens Fechadas</h3>
            <p><%= totals.fechadas %></p>
        </div>
    </div>

<div class="charts-container">
    <div class="chart-card card">
        <h3>Ordens por Tipo</h3>
        <canvas id="chartTipos"></canvas>
    </div>
    <div class="chart-card card">
        <h3>Status das Ordens</h3>
        <canvas id="chartStatus"></canvas>
    </div>
</div>

<div class="list-card card">
    <h3>Ãšltimas Ordens Abertas</h3>
    <% if (!ultimas || ultimas.length === 0) { %>
        <p>Nenhuma ordem aberta recentemente.</p>
    <% } else { %>
        <ul class="ultima-lista">
            <% ultimas.forEach(u => { %>
                <li>
                    <strong><%= u.id %></strong> â€” <%= u.equipamento_nome || "Sem equipamento" %>
                    <span class="badge"><%= u.tipo || "â€”" %></span>
                </li>
            <% }) %>
        </ul>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctxTipos = document.getElementById('chartTipos');
  if (ctxTipos) {
    new Chart(ctxTipos, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(tipos.labels || []) %>,
        datasets: [{ label: 'Quantidade', data: <%- JSON.stringify(tipos.valores || []) %> }]
      },
      options: {}
    });
  }

  const ctxStatus = document.getElementById('chartStatus');
  if (ctxStatus) {
    new Chart(ctxStatus, {
      type: 'pie',
      data: {
        labels: ['Abertas', 'Fechadas'],
        datasets: [{ data: [<%= totals.abertas %>, <%= totals.fechadas %>] }]
      },
      options: {}
    });
  }
</script>

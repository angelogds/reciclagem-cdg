<h1 class="page-title">Editar Usuário</h1>

<form method="POST" action="/users/<%= user.id %>/edit" class="form-card">

    <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <label>Usuário (login)</label>
    <input type="text" value="<%= user.usuario %>" disabled>

    <label>Nome completo</label>
    <input type="text" name="nome" value="<%= user.nome %>" required>

    <label>Papel</label>
    <select name="role">
        <option value="admin" <%= user.role === "admin" ? "selected" : "" %> >Administrador</option>
        <option value="funcionario" <%= user.role === "funcionario" ? "selected" : "" %> >Funcionário</option>
        <option value="operador" <%= user.role === "operador" ? "selected" : "" %> >Operador</option>
    </select>

    <hr>

    <label>Nova senha (opcional)</label>
    <input type="password" name="senha" placeholder="Deixe vazio para manter a atual">

    <button class="btn-save">Salvar Alterações</button>

</form>

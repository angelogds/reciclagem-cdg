<h1 class="page-title">
    <i class="fa-solid fa-truck"></i> Equipamentos
</h1>

<div style="margin-bottom: 25px;">
    <a href="/equipamentos/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Novo Equipamento
    </a>
</div>

<div class="card" style="
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 6px #00000015;
">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Imagem</th>
                <th>Nome</th>
                <th>Código</th>
                <th>Local</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (equipamentos.length === 0) { %>
                <tr>
                    <td colspan="6" style="text-align:center; padding:18px; opacity:0.7;">
                        Nenhum equipamento cadastrado.
                    </td>
                </tr>
            <% } %>

            <% equipamentos.forEach(e => { %>
                <tr>
                    <td><%= e.id %></td>

                    <td>
                        <% if (e.imagem) { %>
                            <img src="/<%= e.imagem %>" class="thumb">
                        <% } else { %>
                            <span style="opacity:0.6;">Sem imagem</span>
                        <% } %>
                    </td>

                    <td><%= e.nome %></td>
                    <td><%= e.codigo %></td>
                    <td><%= e.local %></td>

                    <td>
                        <div class="actions">

                            <a href="/equipamentos/<%= e.id %>/editar"
                               class="btn-edit"
                               title="Editar">
                                <i class="fa-solid fa-pen"></i>
                            </a>

                            <a href="/equipamentos/<%= e.id %>/qrcode"
                               class="btn-qr"
                               title="QR Code">
                                <i class="fa-solid fa-qrcode"></i>
                            </a>

                            <a href="/equipamentos/<%= e.id %>/historico"
                               class="btn-history"
                               title="Histórico">
                                <i class="fa-solid fa-clock-rotate-left"></i>
                            </a>

                            <a href="/equipamentos/<%= e.id %>/correias"
                               class="btn-history"
                               style="background:#b7e4c7;"
                               title="Correias">
                                <i class="fa-solid fa-gears"></i>
                            </a>

                            <form method="POST"
                                  action="/equipamentos/<%= e.id %>/delete"
                                  onsubmit="return confirm('Remover equipamento?');"
                                  style="display:inline;">
                                <button class="btn-delete" title="Excluir">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>

                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-truck"></i>
    Equipamentos
</h1>

<div class="top-actions">
    <a href="/equipamentos/novo" class="btn btn-verde-claro">
        <i class="fa-solid fa-plus"></i> Novo Equipamento
    </a>
</div>

<div class="card tabela-card">

    <table class="tabela">
        <thead>
            <tr>
                <th>ID</th>
                <th>Foto</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Localização</th>
                <th style="width: 240px; text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (equipamentos.length === 0) { %>
                <tr>
                    <td colspan="6" class="empty">Nenhum equipamento cadastrado.</td>
                </tr>
            <% } %>

            <% equipamentos.forEach(eq => { %>
            <tr>
                <td><%= eq.id %></td>

                <!-- FOTO DO EQUIPAMENTO -->
                <td>
                    <% if (eq.imagem) { %>
                        <img src="/<%= eq.imagem %>" class="thumb">
                    <% } else { %>
                        <img src="/img/placeholder.png" class="thumb">
                    <% } %>
                </td>

                <td><%= eq.nome %></td>
                <td><%= eq.codigo || '-' %></td>
                <td><%= eq.local || '-' %></td>

                <td class="actions">

                    <!-- EDITAR -->
                    <a href="/equipamentos/<%= eq.id %>/editar" class="action-btn btn-edit">
                        <i class="fa-solid fa-pen"></i>
                        <span class="btn-label">Editar</span>
                    </a>

                    <!-- QR CODE (rota corrigida!!) -->
                    <a href="/equipamentos/<%= eq.id %>/qrcode" class="action-btn btn-qr">
                        <i class="fa-solid fa-qrcode"></i>
                        <span class="btn-label">QR</span>
                    </a>

                    <!-- HISTÓRICO -->
                    <a href="/equipamentos/<%= eq.id %>/historico" class="action-btn btn-hist">
                        <i class="fa-solid fa-clock-rotate-left"></i>
                        <span class="btn-label">Hist.</span>
                    </a>

                    <!-- CORREIAS -->
                    <a href="/equipamentos/<%= eq.id %>/correias" class="action-btn btn-corr">
                        <i class="fa-solid fa-gears"></i>
                        <span class="btn-label-dark">Correias</span>
                    </a>

                    <!-- EXCLUIR -->
                    <form action="/equipamentos/<%= eq.id %>/delete" method="POST"
                          onsubmit="return confirm('Excluir equipamento?');">
                        <button class="action-btn btn-del">
                            <i class="fa-solid fa-trash"></i>
                            <span class="btn-label">Excluir</span>
                        </button>
                    </form>

                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<div class="relatorio-actions">
    <a href="/equipamentos/relatorio/pdf" class="btn btn-verde-escuro" target="_blank">
        <i class="fa-solid fa-file-pdf"></i> PDF Completo
    </a>
</div>

<%- include("./partials/rodape") %>

<h1 class="page-title">
    <i class="fa-solid fa-bars"></i> Menu do Equipamento
</h1>

<div class="card">

    <h2 style="color:#0b5e33; font-weight:800; margin-bottom:16px;">
        <%= equipamento.nome %>
    </h2>

    <p style="opacity:0.7; margin-bottom:25px;">
        Acesse as principais funções deste equipamento.
    </p>

    <div class="actions">

        <a href="/equipamentos/<%= equipamento.id %>/historico" class="btn-history btn-stack">
            <i class="fa-solid fa-clock-rotate-left"></i>
            <span class="btn-label">Histórico</span>
        </a>

        <a href="/equipamentos/<%= equipamento.id %>/baixar" class="btn-edit btn-stack">
            <i class="fa-solid fa-arrow-down"></i>
            <span class="btn-label">Baixar</span>
        </a>

        <a href="/equipamentos/<%= equipamento.id %>/correias" class="btn-correias btn-stack">
            <i class="fa-solid fa-gears"></i>
            <span class="btn-label">Correias</span>
        </a>

        <a href="/equipamentos/<%= equipamento.id %>/qrcode" class="btn-qr btn-stack">
            <i class="fa-solid fa-qrcode"></i>
            <span class="btn-label">QR Code</span>
        </a>

        <a href="/equipamentos" class="btn-delete btn-stack">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="btn-label">Voltar</span>
        </a>

    </div>

</div>

<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-gear"></i>
    Menu do Equipamento
</h1>

<div class="card" style="text-align:center; padding:30px;">

    <h2 style="color:var(--green-900); margin-bottom:20px;">
        <%= equipamento.nome %>
    </h2>

    <!-- FOTO -->
    <% if (equipamento.foto) { %>
        <img src="/uploads/<%= equipamento.foto %>" 
             class="thumb" 
             style="width:150px; height:120px; margin-bottom:20px;">
    <% } else { %>
        <img src="/img/placeholder.png" 
             class="thumb" 
             style="width:150px; height:120px; margin-bottom:20px;">
    <% } %>

    <!-- MENU GRID -->
    <div style="display:grid; grid-template-columns:repeat(auto-fit,minmax(130px,1fr)); gap:20px; margin-top:20px;">

        <a href="/equipamentos/<%= equipamento.id %>/editar" class="action-btn btn-edit">
            <i class="fa-solid fa-pen"></i>
            <span class="btn-label">Editar</span>
        </a>

        <a href="/equipamentos/<%= equipamento.id %>/qr" class="action-btn btn-qr">
            <i class="fa-solid fa-qrcode"></i>
            <span class="btn-label-dark">QR Code</span>
        </a>

        <a href="/equipamentos/<%= equipamento.id %>/historico" class="action-btn btn-hist">
            <i class="fa-solid fa-clock-rotate-left"></i>
            <span class="btn-label">Histórico</span>
        </a>

        <a href="/equipamentos/<%= equipamento.id %>/correias" class="action-btn btn-corr">
            <i class="fa-solid fa-gears"></i>
            <span class="btn-label-dark">Correias</span>
        </a>

        <form method="POST" action="/equipamentos/<%= equipamento.id %>/delete"
              onsubmit="return confirm('Excluir equipamento?');">
            <button class="action-btn btn-del">
                <i class="fa-solid fa-trash"></i>
                <span class="btn-label">Excluir</span>
            </button>
        </form>

    </div>

</div>

<a href="/equipamentos" class="btn btn-cinza-escuro" style="margin-top:12px;">
    ← Voltar
</a>

<%- include("./partials/rodape") %>

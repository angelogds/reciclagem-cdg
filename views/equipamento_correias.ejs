<h1 class="page-title">
    <i class="fa-solid fa-gears"></i>
    Correias do Equipamento
</h1>

<div class="card">
    <h2 style="color:var(--green-900); margin-bottom:10px;">
        <%= equipamento.nome %>
    </h2>

    <p><strong>Modelo:</strong> <%= equipamento.modelo || '-' %></p>
    <p><strong>Localização:</strong> <%= equipamento.localizacao || '-' %></p>
</div>

<div class="card tabela-card">

    <table class="tabela">
        <thead>
            <tr>
                <th>ID</th>
                <th>Medida</th>
                <th>Modelo</th>
                <th>Quantidade</th>
                <th style="width:140px; text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (correias.length === 0) { %>
            <tr>
                <td colspan="5" class="empty">Nenhuma correia vinculada.</td>
            </tr>
            <% } %>

            <% correias.forEach(cr => { %>
            <tr>
                <td><%= cr.id %></td>
                <td><%= cr.medida %></td>
                <td><%= cr.modelo %></td>

                <td>
                    <span class="tag verde-claro"><%= cr.quantidade %></span>
                </td>

                <td class="actions">

                    <a href="/correias/<%= cr.id %>/editar" class="action-btn btn-edit">
                        <i class="fa-solid fa-pen"></i>
                        <span class="btn-label">Editar</span>
                    </a>

                    <form action="/equipamentos/<%= equipamento.id %>/correias/<%= cr.id %>/delete"
                          method="POST"
                          onsubmit="return confirm('Remover correia do equipamento?');">
                        <button class="action-btn btn-del">
                            <i class="fa-solid fa-trash"></i>
                            <span class="btn-label">Excluir</span>
                        </button>
                    </form>

                </td>
            </tr>
            <% }) %>
        </tbody>

    </table>
</div>

<a href="/equipamentos/<%= equipamento.id %>" class="btn btn-cinza-escuro">
    ← Voltar
</a>

<%- include("./partials/rodape") %>

<h1 class="page-title">
    <i class="fa-solid fa-chart-line"></i> Dashboard
</h1>

<div style="display: flex; flex-wrap: wrap; gap: 25px;">

    <!-- CARD: Equipamentos cadastrados -->
    <div style="
        flex: 1;
        min-width: 260px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px #00000015;
    ">
        <h2 style="font-size: 20px; margin-bottom: 10px; color: #083b1d;">
            <i class="fa-solid fa-truck"></i> Equipamentos
        </h2>
        <p style="font-size: 28px; font-weight: bold; color: #0d542c;">
            <%= totalEquipamentos %>
        </p>
    </div>

    <!-- CARD: Ordens Abertas -->
    <div style="
        flex: 1;
        min-width: 260px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px #00000015;
    ">
        <h2 style="font-size: 20px; margin-bottom: 10px; color: #083b1d;">
            <i class="fa-solid fa-list-check"></i> Ordens Abertas
        </h2>
        <p style="font-size: 28px; font-weight: bold; color: #0d542c;">
            <%= ordensAbertas %>
        </p>
    </div>

    <!-- CARD: Correias em Estoque -->
    <div style="
        flex: 1;
        min-width: 260px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px #00000015;
    ">
        <h2 style="font-size: 20px; margin-bottom: 10px; color: #083b1d;">
            <i class="fa-solid fa-gears"></i> Correias em Estoque
        </h2>
        <p style="font-size: 28px; font-weight: bold; color: #0d542c;">
            <%= totalCorreias %>
        </p>
    </div>

</div>

<!-- DIVISOR -->
<div style="height: 35px;"></div>

<!-- ÚLTIMAS ORDENS -->
<h2 class="page-title" style="font-size: 22px;">
    <i class="fa-solid fa-clock-rotate-left"></i> Últimas Ordens
</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Equipamento</th>
            <th>Status</th>
            <th>Abertura</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% if (ultimasOrdens.length === 0) { %>
            <tr>
                <td colspan="5">Nenhuma ordem encontrada.</td>
            </tr>
        <% } else { %>
            <% ultimasOrdens.forEach(o => { %>
                <tr>
                    <td><%= o.id %></td>
                    <td><%= o.equipamento_nome %></td>
                    <td><%= o.status %></td>
                    <td><%= o.data_abertura %></td>
                    <td>
                        <a href="/ordens/<%= o.id %>" class="btn-primary">Ver</a>
                    </td>
                </tr>
            <% }) %>
        <% } %>
    </tbody>
</table>

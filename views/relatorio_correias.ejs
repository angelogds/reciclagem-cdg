<h1 class="page-title">
    <i class="fa-solid fa-chart-column"></i>
    Relatório de Consumo de Correias
</h1>

<!-- FILTRO + BOTÃO PDF -->
<div style="display:flex; gap:18px; align-items:flex-end; flex-wrap:wrap; margin-bottom:22px;">

    <!-- CARD DO FILTRO -->
    <div class="card form-card" style="max-width: 360px; flex:1;">
        <form method="GET">
            <label>Selecione o mês</label>
            <input type="month" name="mes" value="<%= mes %>" required>

            <button class="btn-primary" style="width:100%; margin-top:12px;">
                <i class="fa-solid fa-filter"></i> Filtrar
            </button>
        </form>
    </div>

    <!-- BOTÃO PDF -->
    <a href="/correias/relatorio/pdf?mes=<%= mes %>"
       class="btn-pdf"
       style="text-decoration:none;"
       target="_blank">
        <i class="fa-solid fa-file-pdf"></i>
        <span class="btn-label">PDF</span>
    </a>

</div>

<!-- TABELA -->
<div class="card" style="overflow-x:auto;">
    <table class="table-modern">
        <thead>
            <tr>
                <th>Equipamento</th>
                <th>Correia</th>
                <th>Total Consumido</th>
            </tr>
        </thead>

        <tbody>

            <% if (rel.length === 0) { %>
            <tr>
                <td colspan="3" class="empty">Nenhum consumo registrado neste mês.</td>
            </tr>
            <% } %>

            <% rel.forEach(r => { %>
            <tr>
                <td><%= r.equipamento %></td>
                <td><%= r.correia %></td>
                <td>
                    <span class="tag green" style="font-size:14px; padding:6px 10px;">
                        <%= r.total %>
                    </span>
                </td>
            </tr>
            <% }) %>

        </tbody>
    </table>
</div>

<!-- VOLTAR -->
<div style="margin-top:18px;">
    <a href="/correias" class="btn-secondary">
        ← Voltar
    </a>
</div>

<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-file-lines"></i>
    Relatório de Correias
</h1>

<div class="card tabela-card">

    <div class="info-relatorio">
        <p><strong>Gerado em:</strong> <%= dataGeracao %></p>
        <p><strong>Total de itens diferentes:</strong> <%= correias.length %></p>
    </div>

    <table class="tabela">
        <thead>
            <tr>
                <th style="width:60px;">ID</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Medida</th>
                <th style="width:80px;">Qtd</th>
            </tr>
        </thead>

        <tbody>
            <% if (correias.length === 0) { %>
                <tr>
                    <td colspan="5" class="empty">Nenhuma correia cadastrada.</td>
                </tr>
            <% } %>

            <% correias.forEach(c => { %>
                <tr>
                    <td><%= c.id %></td>
                    <td><%= c.nome %></td>
                    <td><%= c.modelo %></td>
                    <td><%= c.medida %></td>
                    <td>
                        <span class="tag verde-escuro"><%= c.quantidade %></span>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<div class="relatorio-actions">

    <a href="/correias/relatorio/pdf"
       target="_blank"
       class="btn btn-verde-escuro">
       <i class="fa-solid fa-file-pdf"></i> Baixar PDF
    </a>

    <a href="/correias" class="btn btn-cinza-escuro">
        ← Voltar ao Estoque
    </a>

</div>

<%- include("./partials/rodape") %>

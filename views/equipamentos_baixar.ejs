<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-download"></i>
    Relatório de Equipamentos
</h1>

<div class="card tabela-card">

    <table class="tabela">
        <thead>
            <tr>
                <th>ID</th>
                <th>Imagem</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Localização</th>
                <th>Código</th>
            </tr>
        </thead>

        <tbody>
            <% if (equipamentos.length === 0) { %>
                <tr>
                    <td colspan="6" class="empty">Nenhum equipamento encontrado.</td>
                </tr>
            <% } %>

            <% equipamentos.forEach(eq => { %>
            <tr>
                <td><%= eq.id %></td>

                <td>
                    <% if (eq.foto) { %>
                        <img src="/uploads/<%= eq.foto %>" class="thumb">
                    <% } else { %>
                        <span class="small">Sem foto</span>
                    <% } %>
                </td>

                <td><%= eq.nome %></td>
                <td><%= eq.modelo || '-' %></td>
                <td><%= eq.localizacao || '-' %></td>
                <td><%= eq.codigo || '-' %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<div class="relatorio-actions">
    <a href="/equipamentos/relatorio/pdf" class="btn btn-verde-escuro" target="_blank">
        <i class="fa-solid fa-file-pdf"></i> Gerar PDF
    </a>

    <a href="/equipamentos" class="btn btn-cinza-escuro">
        ← Voltar
    </a>
</div>


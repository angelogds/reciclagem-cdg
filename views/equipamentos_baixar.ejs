<h1 class="page-title">Baixa de Correias</h1>

<div class="card">

    <h2><%= equipamento.nome %></h2>
    <p>Código: <strong><%= equipamento.codigo || "-" %></strong></p>

    <form method="POST" action="/equipamentos/<%= equipamento.id %>/baixar-correia" class="form-card">

        <label>Selecione a correia utilizada</label>
        <select name="correia_id" required>
            <option value="">Escolher</option>

            <% correias.forEach(c => { %>
                <option value="<%= c.id %>">
                    <%= c.nome %> — Estoque: <%= c.quantidade %>
                </option>
            <% }) %>
        </select>

        <label>Quantidade usada</label>
        <input type="number" name="quantidade" min="1" required>

        <button class="btn-save">Registrar Baixa</button>
    </form>

</div>

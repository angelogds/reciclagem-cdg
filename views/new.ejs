<h1 class="page-title">
    <i class="fa-solid fa-user-plus"></i> Novo Usuário
</h1>

<div class="card" style="
    background:white;
    padding:25px;
    border-radius:12px;
    box-shadow:0 2px 6px #00000015;
    max-width:650px;
">

    <% if (error) { %>
        <div style="
            background:#ffdddd;
            padding:12px;
            border-left:5px solid #ff4d4d;
            border-radius:8px;
            color:#8b0000;
            margin-bottom:18px;
        ">
            <%= error %>
        </div>
    <% } %>

    <form method="POST" action="/users/new">

        <!-- Usuário -->
        <label style="font-weight:600;">Usuário (e-mail)</label>
        <input name="usuario" required
               style="width:100%; padding:12px; border:1px solid #d9d9d9; border-radius:8px; margin-bottom:18px;">

        <!-- Senha -->
        <label style="font-weight:600;">Senha</label>
        <input name="senha" type="password" required
               style="width:100%; padding:12px; border:1px solid #d9d9d9; border-radius:8px; margin-bottom:18px;">

        <!-- Nome -->
        <label style="font-weight:600;">Nome Completo</label>
        <input name="nome"
               style="width:100%; padding:12px; border:1px solid #d9d9d9; border-radius:8px; margin-bottom:18px;">

        <!-- Role -->
        <label style="font-weight:600;">Nível de Acesso</label>
        <select name="role"
                style="width:100%; padding:12px; border:1px solid #d9d9d9; border-radius:8px; margin-bottom:20px;">
            <option value="admin">Admin</option>
            <option value="funcionario" selected>Funcionário</option>
            <option value="operador">Operador</option>
        </select>

        <!-- Botão -->
        <button class="btn-primary">
            <i class="fa-solid fa-save"></i> Salvar
        </button>

    </form>
</div>

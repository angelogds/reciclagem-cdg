<!-- login.ejs -->
<%- include("./partials/cabecalho") %>

<div class="login-box card" style="margin:48px auto;">
  <h2 style="color:var(--green-900); text-align:center; margin-bottom:14px;">
    <i class="fa-solid fa-lock"></i> Entrar no Sistema
  </h2>

  <% if (error) { %>
    <div class="alert alert-error"><%= error %></div>
  <% } %>

  <form action="/login" method="POST" style="display:flex; flex-direction:column; gap:12px;">
    <div>
      <label for="username">Usuário</label>
      <input id="username" name="username" type="text" required placeholder="Digite seu usuário">
    </div>

    <div>
      <label for="password">Senha</label>
      <input id="password" name="password" type="password" required placeholder="Senha">
    </div>

    <button class="btn btn-verde-claro btn-full" type="submit">
      <i class="fa-solid fa-right-to-bracket"></i> Entrar
    </button>

    <div style="display:flex; justify-content:space-between; align-items:center; margin-top:6px;">
      <a href="/forgot" class="small">Esqueci minha senha</a>
      <a href="/register" class="small">Criar conta</a>
    </div>
  </form>
</div>

<%- include("./partials/rodape") %>

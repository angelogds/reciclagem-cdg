    <link rel="stylesheet" href="/css/style.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Inter", sans-serif;
            background: url('/img/login-bg.png') no-repeat center center;
            background-size: cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            background: rgba(255, 255, 255, 0.92);
            padding: 40px;
            width: 380px;
            border-radius: 16px;
            box-shadow: 0 6px 25px rgba(0,0,0,0.25);
            backdrop-filter: blur(6px);
        }

        .logo-cdg {
            text-align: center;
            margin-bottom: 20px;
            font-size: 26px;
            font-weight: 700;
            color: #1b4d2d;
        }

        .login-box label {
            font-size: 14px;
            color: #0b2a16;
            font-weight: 600;
        }

        .login-box input {
            width: 100%;
            padding: 12px;
            margin-top: 6px;
            margin-bottom: 18px;
            border-radius: 8px;
            border: 1px solid #8bb79c;
            background: #f9fff9;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #1b4d2d;
            color: white;
            border: none;
            font-size: 16px;
            font-weight: 700;
            border-radius: 10px;
            cursor: pointer;
        }

        .btn-login:hover {
            background: #0f331c;
        }

        .error-box {
            background: #ffdddd;
            padding: 10px;
            color: #a30000;
            margin-bottom: 15px;
            border-radius: 6px;
            border-left: 5px solid #ff4d4d;
        }

        .forgot-link {
            display: block;
            text-align: center;
            margin-top: 12px;
            color: #1b4d2d;
            font-weight: 600;
        }

        .forgot-link:hover {
            text-decoration: underline;
        }

    </style>

</head>


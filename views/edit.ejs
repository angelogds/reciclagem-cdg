<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-pen"></i>
    Editar Equipamento
</h1>

<div class="card form-card">

    <% if (error) { %>
        <div class="alert-error"><%= error %></div>
    <% } %>

    <form action="/equipamentos/<%= equipamento.id %>/editar" method="POST" enctype="multipart/form-data" class="formulario">

        <div class="grupo">
            <label>Nome</label>
            <input type="text" name="nome" required value="<%= equipamento.nome %>">
        </div>

        <div class="grupo">
            <label>Modelo</label>
            <input type="text" name="modelo" value="<%= equipamento.modelo %>">
        </div>

        <div class="grupo">
            <label>Localização</label>
            <input type="text" name="localizacao" value="<%= equipamento.localizacao %>">
        </div>

        <div class="grupo">
            <label>Código</label>
            <input type="text" name="codigo" value="<%= equipamento.codigo %>">
        </div>

        <div class="grupo">
            <label>Descrição</label>
            <textarea name="descricao" rows="4"><%= equipamento.descricao %></textarea>
        </div>

        <div class="grupo">
            <label>Foto atual</label><br>
            <% if (equipamento.foto) { %>
                <img src="/uploads/<%= equipamento.foto %>" class="thumb" style="margin-top:6px;">
            <% } else { %>
                <span class="small">Sem foto cadastrada</span>
            <% } %>
        </div>

        <div class="grupo">
            <label>Nova foto (opcional)</label>
            <input type="file" name="foto" accept="image/*">
        </div>

        <button class="btn btn-verde-claro btn-full" type="submit">
            <i class="fa-solid fa-save"></i> Salvar Alterações
        </button>

    </form>

</div>

<a href="/equipamentos" class="btn btn-cinza-escuro">
    ← Voltar
</a>

<%- include("./partials/rodape") %>

<h1 class="page-title">
    <i class="fa-solid fa-pen"></i>
    Editar Equipamento
</h1>

<div class="card form-card">

    <% if (error) { %>
        <div class="alert-error"><%= error %></div>
    <% } %>

    <form action="/equipamentos/<%= equipamento.id %>" method="POST" enctype="multipart/form-data" class="formulario">

        <div class="grupo">
            <label>Nome</label>
            <input type="text" name="nome" required value="<%= equipamento.nome %>">
        </div>

        <div class="grupo">
            <label>Modelo</label>
            <input type="text" name="modelo" value="<%= equipamento.modelo %>">
        </div>

        <div class="grupo">
            <label>Localiza√ß√£o</label>
            <input type="text" name="local" value="<%= equipamento.local %>">
        </div>

        <div class="grupo">
            <label>C√≥digo</label>
            <input type="text" name="codigo" value="<%= equipamento.codigo %>">
        </div>

        <div class="grupo">
            <label>Descri√ß√£o</label>
            <textarea name="descricao" rows="4"><%= equipamento.descricao %></textarea>
        </div>

        <div class="grupo">
            <label>Foto atual</label><br>
            <% if (equipamento.imagem) { %>
                <img src="/<%= equipamento.imagem %>" class="thumb" style="margin-top:8px;">
            <% } else { %>
                <span class="small">Sem foto cadastrada.</span>
            <% } %>
        </div>

        <div class="grupo">
            <label>Nova foto (opcional)</label>
            <!-- üî• CORRETO PARA MULTER -->
            <input type="file" name="imagem" accept="image/*">
        </div>

        <button class="btn btn-verde-claro btn-full">
            <i class="fa-solid fa-save"></i> Salvar Altera√ß√µes
        </button>

    </form>

</div>

<a href="/equipamentos" class="btn btn-cinza-escuro">
    ‚Üê Voltar
</a>


<h1 class="page-title">Correias / Estoque</h1>

<div class="top-actions">
    <a href="/correias/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Nova Correia
    </a>
</div>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Medida</th>
                <th>Quantidade</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (correias.length === 0) { %>
                <tr>
                    <td colspan="6" class="empty">Nenhuma correia cadastrada.</td>
                </tr>
            <% } %>

            <% correias.forEach(c => { %>
                <tr>
                    <td><%= c.id %></td>
                    <td><%= c.nome %></td>
                    <td><%= c.modelo || "-" %></td>
                    <td><%= c.medida || "-" %></td>
                    <td><%= c.quantidade %></td>

                    <td class="actions">

                        <a href="/correias/<%= c.id %>/editar" class="btn-edit">
                            <i class="fa-solid fa-pen"></i>
                        </a>

                        <form method="POST" action="/correias/<%= c.id %>/delete"
                              onsubmit="return confirm('Excluir correia?');">
                            <button class="btn-delete">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<h1 class="page-title">
    <i class="fa-solid fa-gears"></i> Estoque de Correias
</h1>

<div style="margin-bottom:20px;">
    <a href="/correias/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Nova Correia
    </a>
</div>

<div class="card" style="
    background:white;
    padding:20px;
    border-radius:12px;
    box-shadow:0 2px 6px #00000015;
">

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Medida</th>
                <th>Qtd</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (correias.length === 0) { %>
                <tr>
                    <td colspan="6" style="text-align:center; opacity:0.6; padding:15px;">
                        Nenhuma correia cadastrada.
                    </td>
                </tr>
            <% } %>

            <% correias.forEach(c => { %>
                <tr>
                    <td><%= c.id %></td>
                    <td><%= c.nome %></td>
                    <td><%= c.modelo || '-' %></td>
                    <td><%= c.medida || '-' %></td>
                    <td><%= c.quantidade %></td>

                    <td class="actions">
                        <a href="/correias/<%= c.id %>/editar" class="btn-edit" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>

                        <form method="POST"
                              action="/correias/<%= c.id %>/delete"
                              onsubmit="return confirm('Excluir correia?');"
                              style="display:inline-block;">
                            <button class="btn-delete" title="Excluir">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<h1 class="page-title">
    <i class="fa-solid fa-gears"></i> Correias / Estoque
</h1>

<div style="margin-bottom: 25px;">
    <a href="/correias/novo" class="btn-primary">
        <i class="fa-solid fa-plus"></i> Nova Correia
    </a>
</div>

<div class="card">
    <table class="table-modern">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Medida</th>
                <th>Quantidade</th>
                <th style="text-align:center;">Ações</th>
            </tr>
        </thead>

        <tbody>

            <% if (correias.length === 0) { %>
                <tr>
                    <td colspan="6" class="empty">Nenhuma correia cadastrada.</td>
                </tr>
            <% } %>

            <% correias.forEach(c => { %>
                <tr>
                    <td><%= c.id %></td>
                    <td><%= c.nome %></td>
                    <td><%= c.modelo %></td>
                    <td><%= c.medida %></td>
                    <td>
                        <span class="<%= c.quantidade <= 0 ? 'status-danger' : 'status-ok' %>">
                            <%= c.quantidade %>
                        </span>
                    </td>

                    <td class="actions">

                        <!-- EDITAR -->
                        <a href="/correias/<%= c.id %>/editar"
                           class="btn-edit btn-stack"
                           style="width:85px; height:85px;">
                            <i class="fa-solid fa-pen"></i>
                            <span class="btn-label">Editar</span>
                        </a>

                        <!-- EXCLUIR -->
                        <form method="POST"
                              action="/correias/<%= c.id %>/delete"
                              onsubmit="return confirm('Excluir correia?');"
                              style="display:inline;">
                            <button class="btn-delete btn-stack"
                                    style="width:85px; height:85px;">
                                <i class="fa-solid fa-trash"></i>
                                <span class="btn-label">Excluir</span>
                            </button>
                        </form>

                    </td>

                </tr>
            <% }) %>

        </tbody>
    </table>
</div>

<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-gears"></i>
    Correias / Estoque
</h1>

<div class="top-actions">
    <a href="/correias/novo" class="btn btn-verde-claro">
        <i class="fa-solid fa-plus"></i> Nova Correia
    </a>
</div>

<div class="card tabela-card">

    <table class="tabela">
        <thead>
            <tr>
                <th style="width: 60px;">ID</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Medida</th>
                <th style="width: 80px;">Qtd</th>
                <th style="text-align:center; width: 150px;">Ações</th>
            </tr>
        </thead>

        <tbody>

            <% if (!correias || correias.length === 0) { %>
                <tr>
                    <td colspan="6" class="empty">Nenhuma correia cadastrada.</td>
                </tr>
            <% } else { %>

                <% correias.forEach(c => { %>
                <tr>
                    <td><%= c.id %></td>
                    <td><%= c.nome %></td>
                    <td><%= c.modelo || '-' %></td>
                    <td><%= c.medida || '-' %></td>
                    <td>
                        <span class="tag verde-escuro"><%= c.quantidade %></span>
                    </td>

                    <td class="actions">

                        <a href="/correias/<%= c.id %>/editar" class="action-btn btn-edit" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                            <span class="btn-label">Editar</span>
                        </a>

                        <form method="POST"
                              action="/correias/<%= c.id %>/delete"
                              onsubmit="return confirm('Excluir correia?');" style="display:inline-block;">
                            <button class="action-btn btn-del" title="Excluir">
                                <i class="fa-solid fa-trash"></i>
                                <span class="btn-label">Excluir</span>
                            </button>
                        </form>

                    </td>
                </tr>
                <% }) %>

            <% } %>
        </tbody>
    </table>

</div>

<div class="relatorio-actions" style="margin-top:14px;">
    <a href="/correias/relatorio" class="btn btn-verde-escuro">
        <i class="fa-solid fa-file-lines"></i> Ver Relatório
    </a>

    <a href="/correias/relatorio/pdf" target="_blank" class="btn btn-verde-escuro">
       <i class="fa-solid fa-file-pdf"></i> Baixar PDF
    </a>
</div>



<%
  const title = correia ? "Editar Correia" : "Nova Correia";
  const active = "correias";
%>

<h1 class="page-title"><%= title %></h1>

<form method="POST" action="<%= correia ? ('/correias/' + correia.id + '/editar') : '/correias/novo' %>" class="form-card">
  <label>Nome</label>
  <input name="nome" required value="<%= correia ? correia.nome : '' %>">

  <label>Modelo</label>
  <input name="modelo" value="<%= correia ? correia.modelo : '' %>">

  <label>Medida</label>
  <input name="medida" value="<%= correia ? correia.medida : '' %>">

  <label>Quantidade</label>
  <input type="number" name="quantidade" min="0" value="<%= correia ? correia.quantidade : 0 %>">

  <button class="btn-save"><%= correia ? 'Salvar' : 'Criar' %></button>
</form>

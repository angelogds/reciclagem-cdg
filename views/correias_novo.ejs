<%- include("./partials/cabecalho") %>

<h1 class="page-title">
    <i class="fa-solid fa-gears"></i>
    <%= correia ? "Editar Correia" : "Cadastrar Correia" %>
</h1>

<div class="card form-card">

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert-error"><%= error %></div>
    <% } %>

    <!-- FORM CORRETO PARA CRIAR / EDITAR -->
    <form 
        method="POST" 
        action="<%= correia ? ('/correias/' + correia.id + '/editar') : '/correias/novo' %>" 
        class="formulario"
    >

        <div class="form-grid">

            <div class="grupo">
                <label>Nome da Correia</label>
                <input 
                    type="text" 
                    name="nome" 
                    required 
                    value="<%= correia ? correia.nome : '' %>"
                >
            </div>

            <div class="grupo">
                <label>Modelo</label>
                <input 
                    type="text" 
                    name="modelo" 
                    value="<%= correia ? correia.modelo : '' %>"
                >
            </div>

            <div class="grupo">
                <label>Medida</label>
                <input 
                    type="text" 
                    name="medida"
                    value="<%= correia ? correia.medida : '' %>"
                >
            </div>

            <div class="grupo">
                <label>Quantidade em Estoque</label>
                <input 
                    type="number" 
                    name="quantidade" 
                    min="0"
                    value="<%= correia ? correia.quantidade : 0 %>"
                >
            </div>

        </div>

        <button class="btn btn-verde-claro btn-full" style="margin-top:12px;">
            <i class="fa-solid fa-floppy-disk"></i>
            <%= correia ? "Salvar Alterações" : "Cadastrar Correia" %>
        </button>

    </form>

</div>

<div class="voltar-box" style="margin-top:12px;">
    <a href="/correias" class="btn btn-cinza-escuro">
        ← Voltar
    </a>
</div>

<%- include("./partials/rodape") %>
